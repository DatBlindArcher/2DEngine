package game.engine;

import java.util.*;
import javafx.scene.*;

public class Scene extends javafx.scene.Scene
{
	private Dictionary<Camera, SubScene> views;
	private static Transform root = new Transform();
	
	public Scene() 
	{
		super(root, Screen.width, Screen.height, true, null);
		views = new Hashtable<Camera, SubScene>();
	}
	
	public void addCamera(Camera cam)
	{
		views.put(cam, new SubScene(root, Screen.width, Screen.height, true, null));
	}
	
	public void removeCamera(Camera cam)
	{
		views.remove(cam);
	}
	
	public void addGameObject(Node node)
	{
		root.getChildren().add(node);
	}
}