package CharacterController;

import java.awt.Color;
import game.engine.*;

public class CharacterScene extends Scene
{
	public void activate()
	{
		super.activate();
		GameObject.create(new GameObject("Main Camera", new Component[] { new Camera(), new AudioListener() }), new Vector2(), 0f);
		GameObject.create(new GameObject("Character", "Character", new Component[] { new Character(), new Image("Images/Square.png", 10, new Color(0, 200, 20, 255)) }), new Vector2(Screen.width / 2 - 20f, Screen.height / 2), 0f);
		GameObject wall1 = new GameObject("Wall", new Component[] { new SquareCollider(), new Image("Images/Square.png", -10, new Color(0, 0, 0, 255)) });
		wall1.transform.scale = new Vector2(Screen.width / 32f, 1f);
		GameObject.create(wall1, new Vector2(Screen.width / 2f, Screen.height / 2f + 20f), 0f);
	}
}