package Snake;

import java.awt.Color;

import game.engine.*;

public class SnakeScene extends Scene
{
	public void activate()
	{
		super.activate();
		GameObject.Create(new GameObject("Main Camera", new Component[] { new Camera() }), new Vector2(), 0f);
		GameObject.Create(new GameObject("Apple Spawner", new Component[] { new AppleSpawener() }), new Vector2(), 0f);
		GameObject.Create(new GameObject("Snake", "Snake", new Component[] { new Snake(), new Image("Images/Square.png", 10, new Color(0, 200, 20, 255)) }), new Vector2(Screen.width / 2, Screen.height / 2), 0f);
	}
}