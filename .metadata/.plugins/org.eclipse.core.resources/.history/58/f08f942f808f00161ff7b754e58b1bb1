package game.engine;

public class AudioListener extends Component
{
	public void update()
	{
		super.update();
		
		for(int i = 0; i < Game.instance.activeScene.gameObjects.size(); i++)
		{
			AudioPlayer c;
			
			if((c = Game.instance.activeScene.gameObjects.get(i).getComponent(AudioPlayer.class)) != null)
			{
				c.setValues(gameObject.transform.position);
			}
		}
	}
}