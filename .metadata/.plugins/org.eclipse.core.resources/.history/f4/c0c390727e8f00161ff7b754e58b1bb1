package game.engine;

import javafx.scene.media.*;

public class AudioPlayer extends Component
{
	public String audioPath;
	public boolean loop;
	public boolean mute;
	public float pan;
	public float speed;
	public float volume;
	private MediaPlayer mediaPlayer;
	
	public void start()
	{
		mediaPlayer = new MediaPlayer(new Media(audioPath));
	}
	
	public void play()
	{
		mediaPlayer.play();
	}
	
	public void pause()
	{
		mediaPlayer.pause();
	}
	
	public void stop()
	{
		mediaPlayer.stop();
	}
	
	public void update()
	{
		mediaPlayer.setAutoPlay(loop);
		mediaPlayer.setBalance(pan);
		mediaPlayer.setRate(speed);
		mediaPlayer.setVolume(volume);
		mediaPlayer.setMute(mute);
	}
}